{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": ["airbnb-base"],
    "overrides": [
        {
            "files": [ "**/*.js" ]
        }
    ],
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "linebreak-style": ["error", "windows"],
        "no-plusplus": 0,
        "no-console": 0,
        "no-use-before-define": ["error", {
            "functions": false,
            "classes": true,
            "variables": true,
            "allowNamedExports": false
        }],
        "no-unused-vars": "off",
        "semi": "off",
        "comma-dangle": "error",
        "operator-linebreak": "off"
    },
    "ignorePatterns": ["gulpfile.js", "gulp/**/*", "webpack.config.js", "**/*.py"]  
}
